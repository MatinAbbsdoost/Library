@model Library.Models.Book

@{
    ViewData["Title"] = "Edit";

    List<SelectListItem>? book = ViewData["Book"] is not null
       ? ViewData["Book"] as List<SelectListItem> : new();
}

<h1>Register</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Book">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />


            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublishDate" class="control-label"></label>
                <input asp-for="PublishDate" class="form-control" />
                <span asp-validation-for="PublishDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SheetCount" class="control-label"></label>
                <input asp-for="SheetCount" class="form-control" />
                <span asp-validation-for="SheetCount" class="text-danger"></span>
            </div>
           
           
            @if (Model.Id == 0)
            {
                <div class="form-group">
                    <input type="submit" value="Save" action="Create" class="btn btn-primary" />
                </div>
            }
            else
            {
                <div class="form-group">
                    <input type="submit" value="Save" action="Edit" class="btn btn-primary" />
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
